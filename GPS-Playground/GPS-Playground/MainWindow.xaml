<Window x:Class="GPS_Playground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:GPS_Playground.Source"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <GroupBox Name="mapgroup"  Header="Map" Margin="12,7,180,12" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <src:Map x:Name="MainMap" Zoom="13" MaxZoom="20" MinZoom="5" />
        </GroupBox>
        <GroupBox HorizontalAlignment="Right" Margin="0,7,9.6,11.8" VerticalAlignment="Stretch" Header="Cache Options" Width="165">
            <Grid>
                <Button x:Name="ImportBtn" Margin="5,10,10,0" Height="110" VerticalAlignment="Top" Click="ImportBtn_Click" Content="Import"/>
                <Button x:Name="ExportBtn" Margin="5,125,10,0" Height="110" VerticalAlignment="Top" Click="ExportBtn_Click" Content="Export"/>
                <Button x:Name="PrefetchBtn" Margin="5,240,10,0" Height="110" VerticalAlignment="Top" Click="PrefetchBtn_Click" Content="Prefetch"/>
                <Button x:Name="ClearBtn" Margin="5,355,10,0" Height="110" VerticalAlignment="Top" Click="ClearBtn_Click" Content="Clear Cache"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
